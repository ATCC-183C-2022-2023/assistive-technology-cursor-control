{
    "name": "CursorFree",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "ws://*/*",
        "wss://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "injection.css"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "injection.css"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "menu"
    },
    "externally_connectable": {
        "matches": [
            "https://trends.google.com/*"
        ]
    }
}